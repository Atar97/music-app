<form class="sign-up" action="<%= albums_url %>" method="post">
  <%= auth_token %>
  <label>Title:
    <input type="text" name="album[title]" value="<%= album.title %>">
  </label>
  <label>Release Year:
    <input type="text" name="album[year]" value="<%= album.yr %>">
  </label>
  <select class="" name="album[band_id]">
    <% Band.all.each do |band| %>
    <option value="<%= band.id %>" <%= album.band_id == band.id ? "selected" : "" %> >
      <%= band.name %></option>
    <% end %>
  </select>
  <div class="radio">
    <label>Studio Album
      <input type="radio" name="album[live]" value="false"
      <%= album.live ? "" : "checked" %> >
    </label>
    <label>Live Album
      <input type="radio" name="album[live]" value="true"
      <%= album.live ? "checked" : "" %> >
    </label>
</div>

</form>
