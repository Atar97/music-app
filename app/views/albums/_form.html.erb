
<form class="sign-up" action="<%= album.title ? album_url(album) : albums_url  %>" method="post">
  <% if album.title %>
    <input type="hidden" name="_method" value="patch">
  <% end %>
  <%= auth_token %>
  <label>Title:
    <input type="text" name="album[title]" value="<%= album.title %>">
  </label>
  <label>Release Year:
    <input type="text" name="album[yr]" value="<%= album.yr %>">
  </label>
  <label>Band Name:
    <select class="" name="album[band_id]">
      <option disabled selected>--Choose A Band--</option>
      <% Band.all.each do |band| %>
      <option value="<%= band.id %>" <%= band.id == band_id.to_i ? "selected" : "" %> >
        <%= band.name %></option>
      <% end %>
    </select>
</label>
  <div class="radio">
    <label>Studio Album
      <input type="radio" name="album[live]" value="false"
      <%= album.live ? "" : "checked" %> >
    </label>
    <label>Live Album
      <input type="radio" name="album[live]" value="true"
      <%= album.live ? "checked" : "" %> >
    </label>
</div>

  <input type="submit" name="" value="submit">
</form>
