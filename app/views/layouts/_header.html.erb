<header>
  <h1>Music App</h1>

  <div class="user-header">
    <% if logged_in? %>
      <%= user.email %>
      <form class="logout" action="<%= session_url %>" method="post">
        <%= auth_token %>
        <input type="hidden" name="_method" value="delete">
        <input type="submit" name="" value="Logout!">
      </form>
      <% else %>
        <a class="login" href="<%= new_session_url %>">Log In!</a>
    <% end %>
  </div>

</header>
